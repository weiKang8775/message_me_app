<div class="ui center aligned large header">
  <h2>Welcome to MessageMe - <em>a complete ChatApp</h2>
</div>

<div class="ui center aligned medium icon header">
  <i class="circular power off tiny blue icon"></i>
  Login to continue
</div>



<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit("Login", class: "ui blue submit button") %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>

